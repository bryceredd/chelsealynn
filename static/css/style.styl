highlight = #1599ec

transform()
  -moz-transform arguments
  -webkit-transform arguments
  -o-transform arguments
  -ms-transform arguments
  transform arguments

opacity()
  -webkit-opacity arguments
  -moz-opacity arguments
  -o-opacity arguments
  opacity arguments

transition()
  -webkit-transition arguments 
  -moz-transition arguments 
  -o-transition arguments 
  transition arguments 

a 
  text-decoration none
  color #666

button
  -moz-border-radius 4px
  background none
  border none
  border-radius 4px

body
  font-family 'Lato', sans-serif
  color #666

  background-color white 

  .login 
    float right
    padding 25px 25px 0 0

  .title 
    font-size 52px
    font-weight 100
    padding 0 0 10px 0
    text-align center

.highlight
  color highlight

.content 
  height 600px

  .arrow
    background-image url('/img/left.png')
    background-position center
    background-repeat no-repeat
    height 75px
    position absolute
    top 290px
    transition background-image .5s ease
    width 64px

  .arrow:hover
    background-image url('/img/left-down.png')

  .left.arrow
    left 30px

  .right.arrow
    right 30px
    transform scale(-1, 1)

  .images
    overflow-x hidden
    width 100%

  .allImages
    left 0px
    position relative
    transition left .5s ease
    width 10000px

    img 
      display inline-block
      float left
      height 600px
      padding 0 20px 0 20px
      opacity .5
      transition opacity .5s ease

    img.selected
      opacity 1

.nav 
  clear both
  padding 10px 0 10px 0

  ul 
    list-style-type none
    margin auto 
    width 950px 
    
    li 
      display inline
      font-size 40px
      font-weight 100
      padding 0 10px 0 10px

    .selected a
      color highlight

footer
  color #bbb
  font-size 12px
  padding-top 40px
  text-align center
  width 100%

