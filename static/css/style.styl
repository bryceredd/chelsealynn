highlight = #A5CAA0


transform()
  -moz-transform arguments
  -webkit-transform arguments
  -o-transform arguments
  -ms-transform arguments
  transform arguments

opacity()
  -webkit-opacity arguments
  -moz-opacity arguments
  -o-opacity arguments
  opacity arguments

transition()
  -webkit-transition arguments
  -moz-transition arguments
  -o-transition arguments
  transition arguments

a
  text-decoration none
  color #979797

button
  background none
  border none

body
  font-family 'Lato', sans-serif
  color #666
  padding 0
  margin 0
  min-width 320px

  background-color white

  .login
    padding 25px 25px 0 0
    position absolute
    display inline-block
    right 10px
    top -10px

    input
      display none
    a
      display inline

  .login.focused
    input
      display inline
    a
      display none

  @media (max-width: 700px)
    .login
      position inherit
      padding 15px 15px 0 15px
      float right

      input
        display none
      a
        display block

    .login.focused
      input
        display block
      a
        display none

  .title
    font-size 52px
    font-weight 100
    padding 0 0 10px 0
    text-align center

  @media (max-width: 700px)
    .title
      font-size 38px
      font-weight 200

h1
  font-weight 100
  margin-bottom 0

h2
  color highlight
  font-weight 100
  font-size 32px
  padding 0
  margin 0

.highlight
  color highlight

.content
  padding 0 10px 0 10px
  margin auto

  .centerImage
    margin auto
    max-width 100%
    max-height 600px

.menu
  clear both
  margin auto
  padding 20px 0 0 0

  .menuImage
    margin 0 10px 0 10px
    border 1px #EEE solid

    img
      max-height: 100px


.book, .myself
  width 60%
  margin auto

  img
    float left
    padding-right 44px

  ul
    margin 0
    padding 0
    list-style-type none
    line-height 30px

  .soft
    color #AAA

.client

  margin auto
  width 60%

  img
    border 0px solid #777
    margin 2px

  .download

    margin 20px
    text-align center

    .subtext
      font-size 10pt
      color #AAA

    a
      color highlight
      font-size 24pt
      font-weight 400


.nav
  clear both
  padding 10px 0 10px 0
  text-align center

  li
    display inline-block
    font-size 32px
    font-weight 200
    padding 0 10px 0 10px

    .active
      color highlight

@media (max-width: 700px)
  .nav
    text-align left

    li
      display block
      font-size 20px
      font-weight 200

.myself

  .images
    float: right
    width: 510px

    img
      padding: 5px

footer
  clear both
  color #bbb
  font-size 12px
  padding-top 40px
  text-align center
  width 100%
